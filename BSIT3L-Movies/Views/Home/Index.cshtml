@{
    ViewData["Title"] = "Home Page";
}
<style>
    th{
        padding-right: 30px;
    }
</style>

<table> 
    <thread>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rating</th>
            <th>Realease Year</th>
            <th>Genre</th>
            <th>Image</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td><a href = "/movies/getmovie/@movie.Id"> @movie.Name </a></td>
                <td>@movie.Rating</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Genre</td>
                <td>
                    <img src="@url.Content(movie.Image)"/>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

